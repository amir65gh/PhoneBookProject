@model List<Person>
@{
    ViewData["Title"] = "Index";
}
<table class="table table-bordered table-hover">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Detail</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td><a class="btn btn-warning" asp-controller="Home" asp-action="Detail" asp-route="@item.Id">Detail</a></td>
        </tr>
    }
</table>
